{{#partial "content"}}

<h3>Team Name:</h3>
<p>{{ team.name }}</p>
<h3>Team Description:</h3>
<p> {{ team.description }}</p>
<h3>Team Members:</h3>
<ul>
    {{#each members}}
    <li>
        <p><a href="/teams/{{teamId}}/members/{{id}}">{{ name }}</a></p>
        <a href="/members/update">Edit member name</a><br>
        </p>
    </li>
    {{/each}}
</ul>

<h3><a href="/members/new">Add a new team member</a></h3>
<h3><a href="/teams/update">Update team</a></h3>
<h3><a href="/teams/{{team.id}}/delete">Delete team.</a></h3>
{{/partial}}

{{> layout.hbs}}